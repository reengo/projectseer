<h3>{$description}</h3>

{form}
{flash}
<table cellpadding="0" cellspacing="0">
<tr>
    <td width="10%">Username:</td>
    <td>{form_text name="username" size="20"}</td>
</tr>
<tr>
    <td>Password:</td>
    <td>{link_to action="change-password" id=$__PARAMS.id}change password{/link_to}</td>
</tr>
<tr><td style="height:10px">&nbsp;</td></tr>
<tr>
    <td>Firstname:</td>
    <td>{form_text name="firstname" size="40"}</td>
</tr>
<tr>
    <td>Lastname:</td>
    <td>{form_text name="lastname" size="40"}</td>
</tr>
<tr>
    <td>Email:</td>
    <td>{form_text name="email" size="40"}</td>
</tr>
<tr>
    <td>Role:</td>
    <td>{form_select name="role" options=$roles blank_text="-- select --"}</td>
</tr>
<tr>
    <td>&nbsp;</td>
    <td>
    {form_submit name="submit" class="botton" value="   Update   " no_div=true} or 
    {link_to href="/admin/users/list" confirm="Are you sure you want to cancel?"}cancel{/link_to}
    </td>
</tr>
</table>
{/form}