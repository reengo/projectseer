<h3>Edit Role</h3>
{form}
<table class="table-list1" cellpadding="0" cellspacing="0" width="80%">
<tr>
    <td width="10%">Name:</td>
    <td>{form_text name="name" size="40"}</td>
</tr>
<tr>
    <td>Description:</td>
    <td>{form_text name="description" size="40"}</td>
</tr>
<tr>
    <td>Location:</td>
    <td>{form_select name="home_location" options=$locations blank_text="-- no location --"}</td>
</tr>
<tr>
    <td valign="top">Parent:</td>
    <td>
    {foreach item=item key=name from=$parents}
        {form_checkbox name="parents_$name" text=$item value=$name style_for_label="display:inline; float:none;"}
    {/foreach}
    
    {form_select name="parent" options=$roles blank_text="-- no parent --"}
    </td>
</tr>
<tr>
    <td>&nbsp;</td>
    <td>
    {form_submit name="submit" class="botton" value="   Update   " no_div=true} or 
    {link_to href="/admin/roles/list" confirm="Are you sure you want to cancel?"}cancel{/link_to}
    </td>
</tr>
</table>
{/form}
