<h3>Add Role</h3>
{form}
    {form_text label="Name:" name="name" size="40"}
    {form_text label="Description:" name="description" size="40"}
    {form_select label="Location:" name="location" options=$locations blank_text="-- no location --"}
    {form_select label="Parent:" name="parent" options=$roles blank_text="-- no parent --"}

    {form_submit name="submit" class="botton" value="   Submit   " no_div=true} or 
    {link_to href="/admin/roles/list" confirm="Are you sure you want to cancel?"}cancel{/link_to}
{/form}